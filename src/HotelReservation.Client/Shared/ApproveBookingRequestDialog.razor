@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">تأیید درخواست رزرو</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Label="نظرات (اختیاری)" @bind-value="_approveDto.Comments" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">انصراف</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">تأیید نهایی</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    private ApproveBookingRequestDto _approveDto = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(_approveDto));
    void Cancel() => MudDialog.Cancel();
}
